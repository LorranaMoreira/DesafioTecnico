unit Vendas;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.ComCtrls, Vcl.Grids,
  Vcl.DBGrids, Vcl.StdCtrls, Vcl.ExtCtrls, Banco;

type
  TTelaVendas = class(TForm)
    PnlFundo: TPanel;
    PnlDivisao: TPanel;
    PnlCupom: TPanel;
    PnlTotalVendas: TPanel;
    LbData: TLabel;
    LbNomeCliente: TLabel;
    LbNumVenda: TLabel;
    EdNomeCliente: TEdit;
    EdNumVenda: TEdit;
    EdVlrUnit: TEdit;
    EdQuantidade: TEdit;
    EdProduto: TEdit;
    EdDescItem: TEdit;
    EdVlrTotalItem: TEdit;
    LbProduto: TLabel;
    LbQuantidade: TLabel;
    LbVlrUnit: TLabel;
    LbDescItem: TLabel;
    LbVlrTotalItem: TLabel;
    BtnSelecionar: TButton;
    BtnAdicionar: TButton;
    BtnLimpar: TButton;
    BtnFinalizar: TButton;
    LbCupom: TLabel;
    GridVendas: TDBGrid;
    EdTotalVenda: TEdit;
    EdTotalVendas: TLabel;
    DTPData: TDateTimePicker;

    procedure FormCreate(Sender: TObject);
    procedure BtnAdicionarClick(Sender: TObject);
    procedure BtnLimparClick(Sender: TObject);
    procedure BtnFinalizarClick(Sender: TObject);
    procedure EdNomeClienteKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure EdProdutoKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure GridVendasDblClick(Sender: TObject);

    // 🔒 eventos de bloqueio
    procedure BloquearFocoEdit(Sender: TObject);
    procedure BloquearCliqueEdit(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
  private
    procedure CalcularTotalItem;
    procedure AtualizarTotalVenda;
    function ValidarItem: Boolean;
    procedure GerarNumeroVenda;
    procedure AtualizarStatusFinalizar;
  public
  end;

var
  TelaVendas: TTelaVendas;

implementation

{$R *.dfm}

uses PesqClientes, PesqProdutos;

procedure TTelaVendas.FormCreate(Sender: TObject);
begin
  GerarNumeroVenda;
  DTPData.Date := Date;
  EdTotalVenda.Text := '0,00';
  BtnFinalizar.Enabled := False;
end;

procedure TTelaVendas.BloquearFocoEdit(Sender: TObject);
begin
  ActiveControl := nil;
end;

procedure TTelaVendas.BloquearCliqueEdit(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
begin
  ActiveControl := nil;
end;

procedure TTelaVendas.GerarNumeroVenda;
begin
  with DataModule1.QryVendas do
  begin
    Close;
    SQL.Clear;
    SQL.Text := 'SELECT COALESCE(MAX(ID),0)+1 AS PROXIMO FROM VENDAS';
    Open;
    EdNumVenda.Text := FieldByName('PROXIMO').AsString;
  end;
end;

procedure TTelaVendas.CalcularTotalItem;
var
  Qtd: Integer;
  VlrUnit, Desc, Total: Double;
begin
  Qtd := StrToIntDef(EdQuantidade.Text, 0);
  VlrUnit := StrToFloatDef(EdVlrUnit.Text, 0);
  Desc := StrToFloatDef(EdDescItem.Text, 0);

  Total := (Qtd * VlrUnit) - Desc;
  EdVlrTotalItem.Text := FormatFloat('0.00', Total);
end;

function TTelaVendas.ValidarItem: Boolean;
begin
  Result := False;

  if Trim(EdNomeCliente.Text) = '' then
  begin
    ShowMessage('Selecione um cliente para a venda.');
    Exit;
  end;

  if Trim(EdProduto.Text) = '' then
  begin
    ShowMessage('Selecione um produto.');
    Exit;
  end;

  if StrToIntDef(EdQuantidade.Text, 0) <= 0 then
  begin
    ShowMessage('A quantidade deve ser maior que zero.');
    Exit;
  end;

  Result := True;
end;

procedure TTelaVendas.BtnAdicionarClick(Sender: TObject);
begin
  if not ValidarItem then Exit;

  CalcularTotalItem;

  with DataModule1.QryItensVenda do
  begin
    Append;
    FieldByName('NUM_VENDA').AsInteger := StrToInt(EdNumVenda.Text);
    FieldByName('PRODUTO').AsString := EdProduto.Text;
    FieldByName('QTD').AsInteger := StrToInt(EdQuantidade.Text);
    FieldByName('VL_UNIT').AsFloat := StrToFloat(EdVlrUnit.Text);
    FieldByName('DESC_ITEM').AsFloat := StrToFloatDef(EdDescItem.Text, 0);
    FieldByName('VL_TOTAL').AsFloat := StrToFloat(EdVlrTotalItem.Text);
    Post;
  end;

  AtualizarTotalVenda;
  AtualizarStatusFinalizar;
end;

procedure TTelaVendas.AtualizarTotalVenda;
begin
  with DataModule1.QryItensVenda do
  begin
    Close;
    SQL.Clear;
    SQL.Text := 'SELECT SUM(VL_TOTAL) AS TOTAL FROM ITENS_VENDA WHERE NUM_VENDA = :NUM';
    ParamByName('NUM').AsInteger := StrToInt(EdNumVenda.Text);
    Open;
    EdTotalVenda.Text := FormatFloat('0.00', FieldByName('TOTAL').AsFloat);
  end;
end;

procedure TTelaVendas.AtualizarStatusFinalizar;
begin
  BtnFinalizar.Enabled := (StrToFloatDef(EdTotalVenda.Text, 0) > 0);
end;

procedure TTelaVendas.BtnLimparClick(Sender: TObject);
begin
  EdProduto.Clear;
  EdQuantidade.Clear;
  EdVlrUnit.Clear;
  EdDescItem.Clear;
  EdVlrTotalItem.Clear;
end;

procedure TTelaVendas.BtnFinalizarClick(Sender: TObject);
begin
  if not BtnFinalizar.Enabled then Exit;

  try
    with DataModule1.QryVendas do
    begin
      Close;
      SQL.Clear;
      SQL.Text :=
        'INSERT INTO VENDAS (ID, DATA, CLIENTE, TOTAL) ' +
        'VALUES (:ID, :DATA, :CLIENTE, :TOTAL)';
      ParamByName('ID').AsInteger := StrToInt(EdNumVenda.Text);
      ParamByName('DATA').AsDate := DTPData.Date;
      ParamByName('CLIENTE').AsString := EdNomeCliente.Text;
      ParamByName('TOTAL').AsFloat := StrToFloat(EdTotalVenda.Text);
      ExecSQL;
    end;

    ShowMessage('Venda finalizada com sucesso!');
  except
    on E: Exception do
      ShowMessage('Insira ao menos um produto para finalizar a venda.');
  end;
end;

procedure TTelaVendas.EdNomeClienteKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
begin
  if Key = VK_F2 then
  begin
    if not Assigned(PesqsCliente) then
      PesqsCliente := TPesqsCliente.Create(Application);
    PesqsCliente.ShowModal;
  end;
end;

procedure TTelaVendas.EdProdutoKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
begin
  if Key = VK_F2 then
  begin
    if not Assigned(PesqsProdutos) then
      PesqsProdutos := TPesqsProdutos.Create(Application);
    PesqsProdutos.ShowModal;
  end;
end;

procedure TTelaVendas.GridVendasDblClick(Sender: TObject);
begin
  if not DataModule1.QryItensVenda.IsEmpty then
  begin
    if MessageDlg('Deseja excluir este item da venda?', mtConfirmation, [mbYes, mbNo], 0) = mrYes then
    begin
      DataModule1.QryItensVenda.Delete;
      AtualizarTotalVenda;
      AtualizarStatusFinalizar;
    end;
  end;
end;

end.

