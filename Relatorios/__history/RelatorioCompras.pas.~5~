unit RelatorioCompras;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls, Vcl.ExtCtrls,
  Data.DB, Vcl.Grids, Vcl.DBGrids, Banco;

type
  TRelatCompras = class(TForm)
    PnlFundo: TPanel;
    LbDataInicio: TLabel;
    LbDataFim: TLabel;
    LbExportar: TLabel;
    DTPDataInicio: TDateTimePicker;
    DTPDataFim: TDateTimePicker;
    PnlRodape: TPanel;
    BtnGerar: TButton;
    CbExportar: TComboBox;
    GridCompras: TDBGrid;
    DataSource1: TDataSource;

    procedure FormCreate(Sender: TObject);
    procedure BtnGerarClick(Sender: TObject);
  private
    procedure GerarRelatorio;
  public
    { Public declarations }
  end;

var
  RelatCompras: TRelatCompras;

implementation

{$R *.dfm}

procedure TRelatCompras.FormCreate(Sender: TObject);
begin
  CbExportar.Items.Clear;
  CbExportar.Items.Add('Tela');
  CbExportar.Items.Add('PDF');
  CbExportar.ItemIndex := 0;
end;

procedure TRelatCompras.BtnGerarClick(Sender: TObject);
begin
  GerarRelatorio;
end;

procedure TRelatCompras.GerarRelatorio;
begin
  with DataModule1.QryRelatorios do
  begin
    Close;
    SQL.Clear;
    SQL.Text :=
      'SELECT * FROM COMPRAS ' +
      'WHERE DATA BETWEEN :DTINI AND :DTFIM ' +
      'ORDER BY DATA';
    ParamByName('DTINI').AsDate := DTPDataInicio.Date;
    ParamByName('DTFIM').AsDate := DTPDataFim.Date;
    Open;
  end;

  DataSource1.DataSet := DataModule1.QryRelatorios;
  GridCompras.DataSource := DataSource1;

  if CbExportar.ItemIndex = 1 then
  begin

    ShowMessage('Gerar PDF do relatório de compras...');
  end;
end;

end.
